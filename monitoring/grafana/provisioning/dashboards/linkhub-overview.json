{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{application=\"linkhub\"}[1m])",
          "legendFormat": "{{method}} {{uri}} ({{status}})"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "title": "Response Time p95 (ms)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"linkhub\"}[5m]))",
          "legendFormat": "p95 {{uri}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "title": "Error Rate (%)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"linkhub\",status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=\"linkhub\"}[5m])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Active Connections",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "hikaricp_connections_active{application=\"linkhub\"}",
          "legendFormat": "Active DB Connections"
        }
      ]
    },
    {
      "title": "Redis Circuit Breaker State",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "resilience4j_circuitbreaker_state{name=\"redisCache\",application=\"linkhub\"}",
          "legendFormat": "{{state}}"
        }
      ]
    },
    {
      "title": "Redirect Latency SLO (<50ms)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"linkhub\",uri=\"/{shortCode}\"}[5m])) * 1000",
          "legendFormat": "p95 (ms)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "title": "JVM Heap Memory",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{application=\"linkhub\",area=\"heap\"}",
          "legendFormat": "Used — {{id}}"
        },
        {
          "expr": "jvm_memory_max_bytes{application=\"linkhub\",area=\"heap\"}",
          "legendFormat": "Max — {{id}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "kafka_consumer_fetch_manager_records_lag{application=\"analytics-consumer\"}",
          "legendFormat": "Partition {{partition}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "title": "Analytics Events Processed",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(analytics_events_processed_total[1m])",
          "legendFormat": "Processed/s"
        },
        {
          "expr": "rate(analytics_events_failed_total[1m])",
          "legendFormat": "Failed/s"
        },
        {
          "expr": "rate(analytics_events_dlq_total[1m])",
          "legendFormat": "DLQ/s"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "title": "HikariCP Connection Pool",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "hikaricp_connections_active{application=\"linkhub\"}",
          "legendFormat": "Active"
        },
        {
          "expr": "hikaricp_connections_idle{application=\"linkhub\"}",
          "legendFormat": "Idle"
        },
        {
          "expr": "hikaricp_connections_pending{application=\"linkhub\"}",
          "legendFormat": "Pending"
        },
        {
          "expr": "hikaricp_connections{application=\"linkhub\"}",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    }
  ],
